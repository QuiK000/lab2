@using WebApplication2.ViewModels
@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <h1 class="display-4 mb-4">📊 Dashboard</h1>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Всього замовлень</h6>
                            <h2 class="mb-0">@Model.TotalOrders</h2>
                            <small>Сьогодні: +@Model.TodayOrders</small>
                        </div>
                        <i class="bi bi-receipt fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Загальний дохід</h6>
                            <h2 class="mb-0">@Model.TotalRevenue.ToString("N0") грн</h2>
                            <small>Сьогодні: +@Model.TodayRevenue.ToString("N0") грн</small>
                        </div>
                        <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Водіїв</h6>
                            <h2 class="mb-0">@Model.TotalDrivers</h2>
                            <small>Активних</small>
                        </div>
                        <i class="bi bi-person-badge fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Автомобілів</h6>
                            <h2 class="mb-0">@Model.TotalCars</h2>
                            <small>В автопарку</small>
                        </div>
                        <i class="bi bi-car-front fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Статистика за останні 7 днів</h5>
                </div>
                <div class="card-body">
                    <canvas id="ordersChart" height="100"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Статуси замовлень</h5>
                </div>
                <div class="card-body">
                    <canvas id="statusChart"></canvas>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span><span class="badge bg-primary">●</span> Нові</span>
                            <strong>@Model.NewOrders</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span><span class="badge bg-warning">●</span> Виконуються</span>
                            <strong>@Model.InProgressOrders</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span><span class="badge bg-success">●</span> Завершені</span>
                            <strong>@Model.CompletedOrders</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span><span class="badge bg-danger">●</span> Скасовані</span>
                            <strong>@Model.CancelledOrders</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-trophy"></i> Топ-5 водіїв</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Водій</th>
                                    <th>Рейтинг</th>
                                    <th>Замовлень</th>
                                    <th>Дохід</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.TopDrivers.Count; i++)
                                {
                                    var driver = Model.TopDrivers[i];
                                    <tr>
                                        <td><strong>@(i + 1)</strong></td>
                                        <td>@driver.Name</td>
                                        <td><span class="badge bg-warning text-dark">⭐ @driver.Rating.ToString("F1")</span></td>
                                        <td>@driver.TotalOrders</td>
                                        <td><strong>@driver.TotalRevenue.ToString("N0") грн</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-star"></i> Популярні послуги</h5>
                </div>
                <div class="card-body">
                    <canvas id="servicesChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Останні замовлення</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>№</th>
                                    <th>Дата</th>
                                    <th>Клієнт</th>
                                    <th>Послуга</th>
                                    <th>Водій</th>
                                    <th>Вартість</th>
                                    <th>Статус</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td><strong>#@order.Id</strong></td>
                                        <td>@order.OrderDate.ToString("dd.MM HH:mm")</td>
                                        <td>@order.CustomerName</td>
                                        <td><span class="badge bg-info">@order.Service?.Name</span></td>
                                        <td>@(order.AssignedDriver?.Name ?? "Не призначено")</td>
                                        <td><strong>@order.TotalPrice.ToString("N0") грн</strong></td>
                                        <td>
                                            @if (order.Status == "Нове")
                                            {
                                                <span class="badge bg-primary">@order.Status</span>
                                            }
                                            else if (order.Status == "Виконується")
                                            {
                                                <span class="badge bg-warning">@order.Status</span>
                                            }
                                            else if (order.Status == "Завершено")
                                            {
                                                <span class="badge bg-success">@order.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@order.Status</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        const ordersCtx = document.getElementById('ordersChart');
        new Chart(ordersCtx, {
            type: 'line',
            data: {
                labels: [@string.Join(",", Model.DailyStats.Select(d => $"'{d.Date:dd.MM}'"))],
                datasets: [{
                    label: 'Замовлення',
                    data: [@string.Join(",", Model.DailyStats.Select(d => d.OrderCount))],
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.4
                }, {
                    label: 'Дохід (грн)',
                    data: [@string.Join(",", Model.DailyStats.Select(d => d.Revenue))],
                    borderColor: 'rgb(54, 162, 235)',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { position: 'top' }
                }
            }
        });

        // Діаграма статусів
        const statusCtx = document.getElementById('statusChart');
        new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Нові', 'Виконуються', 'Завершені', 'Скасовані'],
                datasets: [{
                    data: [@Model.NewOrders, @Model.InProgressOrders, @Model.CompletedOrders, @Model.CancelledOrders],
                    backgroundColor: ['#0d6efd', '#ffc107', '#198754', '#dc3545']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true
            }
        });

        // Графік послуг
        const servicesCtx = document.getElementById('servicesChart');
        new Chart(servicesCtx, {
            type: 'bar',
            data: {
                labels: [@string.Join(",", Model.PopularServices.Select(s => $"'{s.Name}'"))],
                datasets: [{
                    label: 'Кількість замовлень',
                    data: [@string.Join(",", Model.PopularServices.Select(s => s.OrderCount))],
                    backgroundColor: 'rgba(255, 193, 7, 0.8)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>
}