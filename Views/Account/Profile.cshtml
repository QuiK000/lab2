@using WebApplication2.ViewModels
@model ProfileViewModel

@{
    ViewData["Title"] = "Профіль";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0"><i class="bi bi-person-circle"></i> Мій профіль</h2>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-muted">Особиста інформація</h5>
                            <hr>
                            <p>
                                <strong><i class="bi bi-person"></i> Повне ім'я:</strong><br>
                                <span class="fs-5">@Model.FullName</span>
                            </p>
                            <p>
                                <strong><i class="bi bi-envelope"></i> Email:</strong><br>
                                @Model.Email
                            </p>
                            <p>
                                <strong><i class="bi bi-telephone"></i> Телефон:</strong><br>
                                @Model.PhoneNumber
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted">Інформація про акаунт</h5>
                            <hr>
                            <p>
                                <strong><i class="bi bi-shield-check"></i> Роль:</strong><br>
                                @if (Model.Role == "Admin")
                                {
                                    <span class="badge bg-danger fs-6">Адміністратор</span>
                                }
                                else if (Model.Role == "Dispatcher")
                                {
                                    <span class="badge bg-warning fs-6">Диспетчер</span>
                                }
                                else if (Model.Role == "Driver")
                                {
                                    <span class="badge bg-primary fs-6">Водій</span>
                                }
                                else
                                {
                                    <span class="badge bg-success fs-6">Клієнт</span>
                                }
                            </p>
                            <p>
                                <strong><i class="bi bi-calendar-check"></i> Дата реєстрації:</strong><br>
                                @Model.RegistrationDate.ToString("dd.MM.yyyy HH:mm")
                            </p>
                        </div>
                    </div>

                    <div class="alert alert-success">
                        <i class="bi bi-info-circle"></i>
                        <strong>Ваш акаунт активний</strong>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-receipt"></i> Мої замовлення
                        </a>
                        <form asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-box-arrow-right"></i> Вийти
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>