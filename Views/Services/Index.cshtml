@model IEnumerable<Service>

@{
    ViewData["Title"] = "Послуги служби таксі";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Наші послуги</h1>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">@item.Name</h5>
                        <small class="text-muted">@item.CarType</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@item.Description</p>
                        <hr>
                        <div class="pricing-info">
                            <p class="mb-2">
                                <strong>Базова вартість:</strong>
                                <span class="badge bg-info text-dark">@item.BasePrice.ToString("F2") грн</span>
                            </p>
                            <p class="mb-2">
                                <strong>Ціна за км:</strong>
                                <span class="badge bg-primary">@item.PricePerKm.ToString("F2") грн/км</span>
                            </p>
                            <p class="mb-0 text-muted">
                                <small>Замовлень: @item.Orders.Count</small>
                            </p>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-controller="Orders" asp-action="Create" asp-route-serviceId="@item.Id"
                               class="btn btn-primary">
                                <i class="bi bi-cart-plus"></i> Замовити
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Послуг поки немає</h4>
            <p>Додайте першу послугу, щоб почати роботу</p>
        </div>
    }
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .pricing-info {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
        }
    </style>
}