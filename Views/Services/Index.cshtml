@model IEnumerable<Service>

@{
    ViewData["Title"] = "Послуги служби таксі";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Наші послуги</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Додати послугу
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">@item.Name</h5>
                        <small class="text-muted">@item.CarType</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@item.Description</p>
                        <hr>
                        <div class="pricing-info">
                            <p class="mb-2">
                                <strong>Базова вартість:</strong>
                                <span class="badge bg-info text-dark">@item.BasePrice.ToString("F2") грн</span>
                            </p>
                            <p class="mb-2">
                                <strong>Ціна за км:</strong>
                                <span class="badge bg-primary">@item.PricePerKm.ToString("F2") грн/км</span>
                            </p>
                            <p class="mb-0 text-muted">
                                <small>Замовлень: @item.Orders.Count</small>
                            </p>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="btn-group w-100 mb-2" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Редагувати
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Видалити
                                </a>
                            </div>
                        }
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Orders" asp-action="Create" asp-route-serviceId="@item.Id"
                               class="btn btn-primary w-100">
                                <i class="bi bi-cart-plus"></i> Замовити
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login"
                               asp-route-returnUrl="@Url.Action("Create", "Orders", new { serviceId = item.Id })"
                               class="btn btn-primary w-100">
                                <i class="bi bi-cart-plus"></i> Замовити (Увійти)
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Послуг поки немає</h4>
            @if (User.IsInRole("Admin"))
            {
                <p>Додайте першу послугу, щоб почати роботу</p>
                <a asp-action="Create" class="btn btn-success btn-lg mt-3">
                    <i class="bi bi-plus-circle"></i> Додати послугу
                </a>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .pricing-info {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
        }
    </style>
}