@using WebApplication2.ViewModels
@model List<UserManagementViewModel>

@{
    ViewData["Title"] = "Управління користувачами";
}

<div class="container-fluid mt-4">
    <h1 class="display-4 mb-4">
        <i class="bi bi-people"></i> Управління користувачами
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" asp-action="Users">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Пошук по імені, email, телефону..."
                           value="@ViewBag.CurrentFilter">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Шукати
                    </button>
                    <a asp-action="Users" class="btn btn-secondary">
                        <i class="bi bi-x"></i> Скинути
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white text-center">
                <div class="card-body">
                    <h3>@Model.Count</h3>
                    <p class="mb-0">Всього користувачів</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white text-center">
                <div class="card-body">
                    <h3>@Model.Count(u => u.Roles.Contains("Client"))</h3>
                    <p class="mb-0">Клієнтів</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark text-center">
                <div class="card-body">
                    <h3>@Model.Count(u => u.Roles.Contains("Driver"))</h3>
                    <p class="mb-0">Водіїв</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white text-center">
                <div class="card-body">
                    <h3>@Model.Count(u => u.IsLocked)</h3>
                    <p class="mb-0">Заблокованих</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Ім'я</th>
                            <th>Email</th>
                            <th>Телефон</th>
                            <th>Роль</th>
                            <th>Реєстрація</th>
                            <th>Замовлень</th>
                            <th>Статус</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="@(user.IsLocked ? "table-danger" : "")">
                                <td><strong>@user.FullName</strong></td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge
                                                    @(role == "Admin" ? "bg-danger" :
                                                                                            role == "Dispatcher" ? "bg-warning" :
                                                                                            role == "Driver" ? "bg-primary" : "bg-success")">
                                    @role
                                </span>
                                                                }
                                </td>
                                <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                                <td><span class="badge bg-info">@user.OrdersCount</span></td>
                                <td>
                                    @if (user.IsLocked)
                                    {
                                        <span class="badge bg-danger">Заблокований</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Активний</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditUserRole" asp-route-id="@user.Id"
                                           class="btn btn-warning" title="Змінити роль">
                                            <i class="bi bi-shield"></i>
                                        </a>
                                        <form asp-action="ToggleLockUser" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn @(user.IsLocked ? "btn-success" : "btn-danger")"
                                                    title="@(user.IsLocked ? "Розблокувати" : "Заблокувати")">
                                                <i class="bi @(user.IsLocked ? "bi-unlock" : "bi-lock")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>