@using WebApplication2.ViewModels
@model DriverStatisticsViewModel

@{
    ViewData["Title"] = $"Статистика - {Model.Driver.Name}";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="bi bi-graph-up"></i> Статистика водія
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад до списку
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <div class="driver-avatar">
                        <i class="bi bi-person-circle display-1 text-primary"></i>
                    </div>
                    <h3 class="mt-2">@Model.Driver.Name</h3>
                    <p class="text-muted mb-1">@Model.Driver.Phone</p>
                    <p class="mb-0">
                        <span class="badge bg-warning text-dark fs-6">
                            <i class="bi bi-star-fill"></i> @Model.Driver.Rating.ToString("F1")
                        </span>
                    </p>
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="card bg-primary text-white text-center">
                                <div class="card-body">
                                    <h3>@Model.TotalOrders</h3>
                                    <p class="mb-0">Всього замовлень</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-success text-white text-center">
                                <div class="card-body">
                                    <h3>@Model.CompletedOrders</h3>
                                    <p class="mb-0">Завершено</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-info text-white text-center">
                                <div class="card-body">
                                    <h3>@Model.TotalEarnings.ToString("N0")</h3>
                                    <p class="mb-0">Загальний дохід (грн)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-warning text-dark text-center">
                                <div class="card-body">
                                    <h3>@Model.TotalReviews</h3>
                                    <p class="mb-0">Відгуків</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Останні 7 днів</h5>
                </div>
                <div class="card-body">
                    <canvas id="last7DaysChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-car-front"></i> Автомобілі</h5>
                </div>
                <div class="card-body">
                    @if (Model.Driver.Cars.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var car in Model.Driver.Cars)
                            {
                                <li class="list-group-item">
                                    <strong>@car.Brand @car.Model</strong><br>
                                    <small class="text-muted">
                                        @car.LicensePlate | @car.Year
                                    </small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Немає призначених автомобілів</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.RecentReviews.Any())
    {
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> Останні відгуки</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var review in Model.RecentReviews)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <strong>@review.User?.FullName</strong>
                                        <div>
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                        </div>
                                    </div>
                                    <p class="card-text">@review.Comment</p>
                                    <small class="text-muted">
                                        @review.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        const ctx = document.getElementById('last7DaysChart');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [@string.Join(",", Model.Last7Days.Select(d => $"'{d.Date:dd.MM}'"))],
                datasets: [{
                    label: 'Замовлення',
                    data: [@string.Join(",", Model.Last7Days.Select(d => d.OrderCount))],
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgb(54, 162, 235)',
                    borderWidth: 1
                }, {
                    label: 'Дохід (грн)',
                    data: [@string.Join(",", Model.Last7Days.Select(d => d.Revenue))],
                    backgroundColor: 'rgba(75, 192, 192, 0.5)',
                    borderColor: 'rgb(75, 192, 192)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true
            }
        });
    </script>
}