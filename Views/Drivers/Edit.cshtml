@model Driver

@{
    ViewData["Title"] = "Редагувати водія";
    var cars = ViewBag.Cars as List<Car>;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0"><i class="bi bi-pencil"></i> Редагувати водія</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LicenseNumber" class="form-label"></label>
                                <input asp-for="LicenseNumber" class="form-control" />
                                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Experience" class="form-label"></label>
                                <input asp-for="Experience" class="form-control" type="number" min="0" max="50" />
                                <span asp-validation-for="Experience" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Rating" class="form-label"></label>
                                <input asp-for="Rating" class="form-control" type="number" step="0.1" min="0" max="5" />
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label"><strong>Призначені автомобілі:</strong></label>
                            <div class="card">
                                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                                    @if (cars != null && cars.Any())
                                    {
                                        @foreach (var car in cars)
                                        {
                                            var isChecked = Model.Cars.Any(c => c.Id == car.Id);
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" name="selectedCars"
                                                       value="@car.Id" id="car_@car.Id" checked="@isChecked">
                                                <label class="form-check-label" for="car_@car.Id">
                                                    <strong>@car.Brand @car.Model</strong> (@car.LicensePlate)
                                                    <br>
                                                    <small class="text-muted">@car.Color, @car.Year, @car.BodyType</small>
                                                </label>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted">Немає доступних автомобілів</p>
                                    }
                                </div>
                            </div>
                            <small class="text-muted">
                                Виберіть автомобілі, які може керувати цей водій
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save"></i> Зберегти зміни
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Назад до списку
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}