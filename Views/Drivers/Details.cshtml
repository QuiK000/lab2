@model Driver

@{
    ViewData["Title"] = "Деталі водія";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0"><i class="bi bi-person-circle"></i> Інформація про водія</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-muted">Особисті дані</h5>
                            <hr>
                            <p>
                                <strong>Ім'я:</strong><br>
                                <span class="fs-5">@Model.Name</span>
                            </p>
                            <p>
                                <strong>Телефон:</strong><br>
                                <i class="bi bi-telephone"></i> @Model.Phone
                            </p>
                            <p>
                                <strong>Номер ліцензії:</strong><br>
                                <i class="bi bi-card-heading"></i> @Model.LicenseNumber
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted">Професійні дані</h5>
                            <hr>
                            <p>
                                <strong>Досвід роботи:</strong><br>
                                <span class="badge bg-info fs-6">@Model.Experience років</span>
                            </p>
                            <p>
                                <strong>Рейтинг:</strong><br>
                                <span class="badge bg-warning text-dark fs-6">
                                    <i class="bi bi-star-fill"></i> @Model.Rating.ToString("F2")
                                </span>
                            </p>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <h5 class="text-muted">
                            <i class="bi bi-car-front"></i> Призначені автомобілі (@Model.Cars.Count)
                        </h5>
                        <hr>
                        @if (Model.Cars.Any())
                        {
                            <div class="row">
                                @foreach (var car in Model.Cars)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="card border-secondary">
                                            <div class="card-body">
                                                <h6 class="card-title">
                                                    <strong>@car.Brand @car.Model</strong>
                                                </h6>
                                                <p class="card-text mb-1">
                                                    <i class="bi bi-hash"></i> <strong>Номер:</strong> @car.LicensePlate
                                                </p>
                                                <p class="card-text mb-1">
                                                    <i class="bi bi-palette"></i> <strong>Колір:</strong> @car.Color
                                                </p>
                                                <p class="card-text mb-1">
                                                    <i class="bi bi-calendar3"></i> <strong>Рік:</strong> @car.Year
                                                </p>
                                                <p class="card-text mb-0">
                                                    <i class="bi bi-truck"></i> <strong>Тип:</strong> @car.BodyType
                                                </p>
                                                @if (car.IsAvailable)
                                                {
                                                    <span class="badge bg-success mt-2">Доступний</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary mt-2">Недоступний</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                Цьому водію не призначено жодного автомобіля
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Редагувати
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Назад до списку
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>