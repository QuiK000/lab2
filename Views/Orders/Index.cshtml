@model IEnumerable<Order>

@{
    ViewData["Title"] = "Мої замовлення";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">
        <i class="bi bi-receipt"></i> Мої замовлення
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted">Всього замовлень</h5>
                    <h2 class="text-primary mb-0">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted">Активних</h5>
                    <h2 class="text-warning mb-0">@Model.Count(o => o.Status == "Нове" || o.Status == "Виконується")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted">Завершених</h5>
                    <h2 class="text-success mb-0">@Model.Count(o => o.Status == "Завершено")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted">Витрачено</h5>
                    <h2 class="text-info mb-0">@Model.Where(o => o.Status == "Завершено").Sum(o => o.TotalPrice).ToString("N0") грн</h2>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header
                                    @(order.Status == "Нове" ? "bg-primary" :
                                                           order.Status == "Виконується" ? "bg-warning" :
                                                           order.Status == "Завершено" ? "bg-success" : "bg-danger")
                            text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Замовлення #@order.Id</h5>
                            <small>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                        <span class="badge bg-white text-dark fs-6">@order.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="mb-2">
                            <strong><i class="bi bi-star"></i> Послуга:</strong>
                            <span class="badge bg-info">@order.Service?.Name</span>
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-geo-alt"></i> Від:</strong>
                            @order.PickupAddress
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-geo"></i> До:</strong>
                            @order.DestinationAddress
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-speedometer"></i> Відстань:</strong>
                            @order.Distance.ToString("F2") км
                        </p>
                        <p class="mb-0">
                            <strong><i class="bi bi-cash"></i> Вартість:</strong>
                            <span class="text-success fs-5 fw-bold">@order.TotalPrice.ToString("N0") грн</span>
                        </p>
                    </div>

                    @if (order.AssignedDriver != null)
                            {
                                <div class="alert alert-info mb-2">
                                    <strong><i class="bi bi-person-circle"></i> Водій:</strong> @order.AssignedDriver.Name<br>
                                    <small>
                                        <i class="bi bi-telephone"></i> @order.AssignedDriver.Phone |
                                        <i class="bi bi-star-fill"></i> @order.AssignedDriver.Rating.ToString("F1")
                                    </small>
                                    @if (order.AssignedCar != null)
                                    {
                                        <br>
                                        <strong><i class="bi bi-car-front"></i> Авто:</strong>
                                        @($"{order.AssignedCar.Brand} {order.AssignedCar.Model} ({order.AssignedCar.LicensePlate})")
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-2">
                                    <i class="bi bi-clock"></i> Очікується призначення водія
                                </div>
                            }

                            <div class="btn-group w-100 mt-2" role="group">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Деталі
                                </a>
                                @if (order.Status == "Нове" || order.Status == "Виконується")
                                {
                                    <button type="button" class="btn btn-sm btn-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#cancelModal@order.Id">
                                        <i class="bi bi-x-circle"></i> Скасувати
                                    </button>
                                }

                                @if (order.Status == "Завершено" && order.AssignedDriver != null)
                                {
                                    <a asp-controller="Reviews" asp-action="Create"
                                       asp-route-orderId="@order.Id"
                                       class="btn btn-sm btn-success">
                                        <i class="bi bi-star"></i> Залишити відгук
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Modal для підтвердження скасування -->
                    <div class="modal fade" id="cancelModal@order.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title">Скасування замовлення</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Ви впевнені, що хочете скасувати замовлення #@order.Id?</p>
                                    <p class="text-muted">Цю дію неможливо скасувати.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ні</button>
                                    <form asp-action="Cancel" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@order.Id" />
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-check"></i> Так, скасувати
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center p-5">
            <h3><i class="bi bi-inbox"></i> У вас поки немає замовлень</h3>
            <p class="lead">Оформіть перше замовлення</p>
            <a asp-controller="Services" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-cart-plus"></i> Замовити таксі
            </a>
        </div>
    }
</div>