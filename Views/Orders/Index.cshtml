@model IEnumerable<Order>

@{
    ViewData["Title"] = "Список замовлень";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">📋 Всі замовлення</h1>
        <a asp-controller="Services" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Нове замовлення
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>№</th>
                                <th>Дата</th>
                                <th>Клієнт</th>
                                <th>Телефон</th>
                                <th>Маршрут</th>
                                <th>Послуга</th>
                                <th>Відстань</th>
                                <th>Вартість</th>
                                <th>Статус</th>
                                <th>Дії</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@item.Id</strong></td>
                                    <td>@item.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.Phone</td>
                                    <td>
                                        <small>
                                            <strong>Від:</strong> @(item.PickupAddress.Length > 30 ? item.PickupAddress.Substring(0, 30) + "..." : item.PickupAddress)<br>
                                            <strong>До:</strong> @(item.DestinationAddress.Length > 30 ? item.DestinationAddress.Substring(0, 30) + "..." : item.DestinationAddress)
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.Service?.Name</span>
                                    </td>
                                    <td>@item.Distance.ToString("F2") км</td>
                                    <td><strong>@item.TotalPrice.ToString("F2") грн</strong></td>
                                    <td>
                                        @if (item.Status == "Нове")
                                        {
                                            <span class="badge bg-primary">@item.Status</span>
                                        }
                                        else if (item.Status == "Виконується")
                                        {
                                            <span class="badge bg-warning text-dark">@item.Status</span>
                                        }
                                        else if (item.Status == "Завершено")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-danger" title="Видалити">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <div class="row">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Всього замовлень</h5>
                            <h2 class="text-primary">@Model.Count()</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Загальна вартість</h5>
                            <h2 class="text-success">@Model.Sum(o => o.TotalPrice).ToString("F2") грн</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Загальна відстань</h5>
                            <h2 class="text-info">@Model.Sum(o => o.Distance).ToString("F2") км</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Активні</h5>
                            <h2 class="text-warning">@Model.Count(o => o.Status == "Нове" || o.Status == "Виконується")</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center p-5">
            <h3>📭 Замовлень поки немає</h3>
            <p class="lead">Оформіть перше замовлення</p>
            <a asp-controller="Services" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-cart-plus"></i> Замовити таксі
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        .table tbody tr {
            transition: background-color 0.2s;
        }

            .table tbody tr:hover {
                background-color: rgba(0, 123, 255, 0.1);
            }
    </style>
}