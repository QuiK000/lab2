@model Order

@{
    ViewData["Title"] = $"Замовлення #{Model.Id}";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header
                    @(Model.Status == "Нове" ? "bg-primary" :
                                           Model.Status == "Виконується" ? "bg-warning" :
                                           Model.Status == "Завершено" ? "bg-success" : "bg-danger")
                    text-white">
                    <h2 class="mb-0">Замовлення #@Model.Id</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-muted">Інформація про замовлення</h5>
                            <hr>
                            <p><strong>Дата:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
                            <p>
                                <strong>Статус:</strong>
                                <span class="badge
                                    @(Model.Status == "Нове" ? "bg-primary" :
                                                                            Model.Status == "Виконується" ? "bg-warning" :
                                                                            Model.Status == "Завершено" ? "bg-success" : "bg-danger")">
                                    @Model.Status
                                </span>
                            </p>
                            <p><strong>Послуга:</strong> @Model.Service?.Name</p>
                            <p><strong>Відстань:</strong> @Model.Distance.ToString("F2") км</p>
                            <p>
                                <strong>Вартість:</strong>
                                <span class="text-success fs-4 fw-bold">@Model.TotalPrice.ToString("N0") грн</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted">Маршрут</h5>
                            <hr>
                            <p><strong>📍 Від:</strong><br>@Model.PickupAddress</p>
                            <p><strong>🎯 До:</strong><br>@Model.DestinationAddress</p>
                        </div>
                    </div>

                    @if (Model.AssignedDriver != null)
                    {
                        <div class="alert alert-info">
                            <h5><i class="bi bi-person-circle"></i> Інформація про водія</h5>
                            <p class="mb-1"><strong>Ім'я:</strong> @Model.AssignedDriver.Name</p>
                            <p class="mb-1"><strong>Телефон:</strong> @Model.AssignedDriver.Phone</p>
                            <p class="mb-1">
                                <strong>Рейтинг:</strong>
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-star-fill"></i> @Model.AssignedDriver.Rating.ToString("F1")
                                </span>
                            </p>
                            @if (Model.AssignedCar != null)
                            {
                                <p class="mb-0">
                                    <strong>Автомобіль:</strong>
                                    @Model.AssignedCar.Brand @Model.AssignedCar.Model
                                    (@Model.AssignedCar.LicensePlate)
                                </p>
                            }
                        </div>
                    }

                    <div class="d-grid gap-2">
                        @if (Model.Status == "Завершено" && Model.AssignedDriver != null)
                        {
                            <a asp-controller="Reviews" asp-action="Create" asp-route-orderId="@Model.Id"
                               class="btn btn-success btn-lg">
                                <i class="bi bi-star"></i> Залишити відгук
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Назад до замовлень
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>