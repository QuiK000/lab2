@using WebApplication2.ViewModels
@model PriceCalculatorViewModel

@{
    ViewData["Title"] = "Калькулятор вартості";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient text-white"
                     style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%)">
                    <h2 class="mb-0">
                        <i class="bi bi-calculator"></i> Калькулятор вартості поїздки
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form method="get" asp-action="Calculator" id="calculatorForm">
                        <div class="mb-4">
                            <label class="form-label fs-5">
                                <strong>Відстань поїздки (км):</strong>
                            </label>
                            <div class="input-group input-group-lg">
                                <input type="number" name="distance" class="form-control"
                                       step="0.1" min="0.1" max="1000"
                                       value="@Model.Distance"
                                       placeholder="Введіть відстань..."
                                       id="distanceInput" />
                                <span class="input-group-text">км</span>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-calculator"></i> Розрахувати
                                </button>
                            </div>
                        </div>
                    </form>

                    @if (Model.Distance > 0)
                    {
                        <hr class="my-4" />

                        <h4 class="mb-3">
                            <i class="bi bi-currency-dollar"></i> Вартість по тарифам:
                        </h4>

                        <div class="row">
                            @foreach (var service in Model.Services)
                            {
                                var totalPrice = Model.CalculatedPrices.ContainsKey(service.Id)
                                ? Model.CalculatedPrices[service.Id]
                                : 0;

                                <div class="col-md-6 mb-3">
                                    <div class="card h-100 border-primary">
                                        <div class="card-header bg-primary text-white">
                                            <h5 class="mb-0">
                                                <i class="bi bi-star"></i> @service.Name
                                            </h5>
                                            <small>@service.CarType</small>
                                        </div>
                                        <div class="card-body">
                                            <p class="text-muted">@service.Description</p>

                                            <div class="pricing-breakdown bg-light p-3 rounded mb-3">
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span>Базова вартість:</span>
                                                    <strong>@service.BasePrice.ToString("F2") грн</strong>
                                                </div>
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span>@Model.Distance км × @service.PricePerKm грн/км:</span>
                                                    <strong>@((service.PricePerKm * Model.Distance).ToString("F2")) грн</strong>
                                                </div>
                                                <hr>
                                                <div class="d-flex justify-content-between">
                                                    <span class="fs-5"><strong>ВСЬОГО:</strong></span>
                                                    <span class="fs-4 text-success">
                                                        <strong>@totalPrice.ToString("F2") грн</strong>
                                                    </span>
                                                </div>
                                            </div>

                                            @if (User.Identity?.IsAuthenticated == true)
                                            {
                                                <a asp-controller="Orders" asp-action="Create"
                                                   asp-route-serviceId="@service.Id"
                                                   class="btn btn-success w-100">
                                                    <i class="bi bi-cart-plus"></i> Замовити цей тариф
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-controller="Account" asp-action="Login"
                                                   asp-route-returnUrl="@Url.Action("Create", "Orders", new { serviceId = service.Id })"
                                                   class="btn btn-primary w-100">
                                                    <i class="bi bi-box-arrow-in-right"></i> Увійти для замовлення
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle fs-1"></i>
                            <h5 class="mt-3">Введіть відстань для розрахунку вартості</h5>
                            <p class="mb-0">Наприклад: 5, 10, 15 км</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .pricing-breakdown {
            border-left: 4px solid #0d6efd;
        }
    </style>
}