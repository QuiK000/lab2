@model IEnumerable<Order>

@{
    ViewData["Title"] = "Управління замовленнями";
}

<div class="container-fluid mt-4">
    <h1 class="display-4 mb-4">🎯 Управління замовленнями</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Фільтри та пошук</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Статус</label>
                        <select name="status" class="form-select">
                            <option value="">Всі статуси</option>
                            @foreach (var status in ViewBag.Statuses)
                            {
                                <option value="@status" selected="@(ViewBag.CurrentStatus == status)">@status</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Пошук</label>
                        <input type="text" name="search" class="form-control"
                               placeholder="Ім'я, телефон, №" value="@ViewBag.Search">
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Від дати</label>
                        <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate">
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">До дати</label>
                        <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate">
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Шукати
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x"></i> Скинути
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-4">🎯 Управління замовленнями</h1>
        <a asp-action="ExportToCSV"
           asp-route-status="@ViewBag.CurrentStatus"
           asp-route-fromDate="@ViewBag.FromDate"
           asp-route-toDate="@ViewBag.ToDate"
           class="btn btn-success">
            <i class="bi bi-download"></i> Експортувати в CSV
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.Count(o => o.Status == "Нове")</h3>
                    <p class="mb-0">Нових</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3>@Model.Count(o => o.Status == "Виконується")</h3>
                    <p class="mb-0">Виконуються</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.Count(o => o.Status == "Завершено")</h3>
                    <p class="mb-0">Завершені</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3>@Model.Count(o => o.Status == "Скасовано")</h3>
                    <p class="mb-0">Скасовані</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>№</th>
                            <th>Дата</th>
                            <th>Клієнт</th>
                            <th>Послуга</th>
                            <th>Водій</th>
                            <th>Авто</th>
                            <th>Вартість</th>
                            <th>Статус</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.Id</strong></td>
                                <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <strong>@order.CustomerName</strong><br>
                                    <small class="text-muted">@order.Phone</small>
                                </td>
                                <td><span class="badge bg-info">@order.Service?.Name</span></td>
                                <td>
                                    @if (order.AssignedDriver != null)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-person-check"></i> @order.AssignedDriver.Name
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Не призначено</span>
                                    }
                                </td>
                                <td>
                                    @if (order.AssignedCar != null)
                                    {
                                        <span class="badge bg-dark">@order.AssignedCar.LicensePlate</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">-</span>
                                    }
                                </td>
                                <td><strong>@order.TotalPrice.ToString("N0") грн</strong></td>
                                <td>
                                    @if (order.Status == "Нове")
                                    {
                                        <span class="badge bg-primary">@order.Status</span>
                                    }
                                    else if (order.Status == "Виконується")
                                    {
                                        <span class="badge bg-warning text-dark">@order.Status</span>
                                    }
                                    else if (order.Status == "Завершено")
                                    {
                                        <span class="badge bg-success">@order.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@order.Status</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Manage" asp-route-id="@order.Id"
                                       class="btn btn-sm btn-primary" title="Управління">
                                        <i class="bi bi-gear"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">
            <h4>Замовлень не знайдено</h4>
            <p>Спробуйте змінити фільтри пошуку</p>
        </div>
    }
</div>