@model Car

@{
    ViewData["Title"] = "Видалити автомобіль";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Видалення автомобіля</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="bi bi-exclamation-circle"></i> Ви впевнені, що хочете видалити цей автомобіль?</h5>
                        <p class="mb-0">Цю дію неможливо скасувати!</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted">Інформація про автомобіль:</h5>
                        <hr>
                        <dl class="row">
                            <dt class="col-sm-4">Марка і модель:</dt>
                            <dd class="col-sm-8">@Model.Brand @Model.Model</dd>

                            <dt class="col-sm-4">Номерний знак:</dt>
                            <dd class="col-sm-8">@Model.LicensePlate</dd>

                            <dt class="col-sm-4">Колір:</dt>
                            <dd class="col-sm-8">@Model.Color</dd>

                            <dt class="col-sm-4">Рік випуску:</dt>
                            <dd class="col-sm-8">@Model.Year</dd>

                            <dt class="col-sm-4">Тип кузова:</dt>
                            <dd class="col-sm-8">@Model.BodyType</dd>

                            <dt class="col-sm-4">Статус:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsAvailable)
                                {
                                    <span class="badge bg-success">Доступний</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Недоступний</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Водії:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Drivers.Any())
                                {
                                    @string.Join(", ", Model.Drivers.Select(d => d.Name))
                                }
                                else
                                {
                                    <span class="text-muted">Немає призначених водіїв</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Підтвердити видалення
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Скасувати
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>